<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:complexType name="infoUbicacion">
<xs:simpleContent>
  <xs:extension base="direccion">
    <xs:attribute name="metros" type="xs:integer"></xs:attribute>
  </xs:extension>
</xs:simpleContent>
</xs:complexType>

  <xs:element name="ubicaciones">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="ubicacion" type="infoUbicacion" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="direccion">
    <xs:restriction base="xs:string">
      <xs:enumeration value="N" />
      <xs:enumeration value="S" />
      <xs:enumeration value="E" />
      <xs:enumeration value="O" />
    </xs:restriction>
  </xs:simpleType>

</xs:schema>